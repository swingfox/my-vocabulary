<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stagesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#62E6FF"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.vocabulary.my.myvocabulary.HomeActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        app:srcCompat="@drawable/stage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linearLayout"
                android:layout_weight="1"
                app:srcCompat="@drawable/roundedsquare" />

            <TextView
                android:id="@+id/txtStage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1.10"
                android:gravity="center"
                android:text="1"
                android:textSize="60sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linearLayout2"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                app:srcCompat="@drawable/roundedsquare" />

            <ImageView
                android:id="@+id/imgLock2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="23dp"
                android:layout_weight="1.10"
                app:srcCompat="@drawable/lock" />

            <TextView
                android:id="@+id/txtStage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1.10"
                android:gravity="center"
                android:text="2"
                android:textSize="60sp"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="228dp"
        android:layout_height="32dp"
        android:layout_below="@+id/txtStage1"
        android:layout_marginLeft="65dp"
        android:orientation="horizontal"
        android:layout_weight="0.32">

        <LinearLayout
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgStageStar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imgStageStar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imgStageStar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtStage2"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgStageStar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imgStageStar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imgStageStar6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp">

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                app:srcCompat="@drawable/roundedsquare" />

            <ImageView
                android:id="@+id/imgLock3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1.10"
                app:srcCompat="@drawable/lock" />

            <TextView
                android:id="@+id/txtStage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1.10"
                android:gravity="center"
                android:text="3"
                android:textSize="55sp"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                app:srcCompat="@drawable/roundedsquare" />

            <ImageView
                android:id="@+id/imgLock4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1.10"
                app:srcCompat="@drawable/lock" />

            <TextView
                android:id="@+id/txtStage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imgLock4"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imgLock4"
                android:layout_weight="1.10"
                android:gravity="center"
                android:text="4"
                android:textSize="55sp"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="231dp"
        android:layout_height="35dp"
        android:layout_marginLeft="65dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtStage3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgStageStar7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imgStageStar8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imgStageStar9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgStageStar10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imgStageStar11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imgStageStar12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/star" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnStageBack"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        app:srcCompat="@drawable/back" />
</LinearLayout>